@page
@model StudentEnrollmentSystem1.Pages.Teacher.LoginModel
@{
    ViewData["Title"] = "Teacher Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Teacher Login</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <div class="form-group mb-3">
                        <label asp-for="LoginData.Email" class="control-label"></label>
                        <input asp-for="LoginData.Email" class="form-control" />
                        <span asp-validation-for="LoginData.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LoginData.Password" class="control-label"></label>
                        <input asp-for="LoginData.Password" class="form-control" type="password" />
                        <span asp-validation-for="LoginData.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="LoginData.RememberMe" class="form-check-input" />
                            <label asp-for="LoginData.RememberMe" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a asp-page="/Teacher/Register" class="btn btn-link">New Teacher? Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}