@page
@model StudentEnrollmentSystem1.Pages.Student.PaymentModel
@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Course Fee Payment</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <h5>Student Information</h5>
                        @if (!string.IsNullOrEmpty(Model.StudentId))
                        {
                            <p><strong>Student ID:</strong> @Model.StudentId</p>
                            <p><strong>Name:</strong> @Model.StudentName</p>
                            <p><strong>Email:</strong> @Model.StudentEmail</p>
                        }
                        else
                        {
                            <p>Welcome back! Please complete your payment.</p>
                        }
                    </div>

                    <div class="course-details mb-4">
                        <h5>Course Details</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th>Course</th>
                                <td>@Model.CourseDetails.Name</td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td>@Model.CourseDetails.Description</td>
                            </tr>
                            <tr class="table-primary">
                                <th>Fee Amount</th>
                                <td>₹@Model.CourseDetails.Fee.ToString("N2")</td>
                            </tr>
                        </table>
                    </div>

                    <form method="post">
                        <h5>Payment Information</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="control-label">Card Holder Name</label>
                                    <input class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="control-label">Card Number</label>
                                    <input class="form-control" placeholder="XXXX-XXXX-XXXX-XXXX" required />
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Expiry Month</label>
                                    <select class="form-control" required>
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i">@i.ToString("D2")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Expiry Year</label>
                                    <select class="form-control" required>
                                        @for (int i = DateTime.Now.Year; i <= DateTime.Now.Year + 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">CVV</label>
                                    <input type="password" class="form-control" maxlength="3" required />
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Pay
                                ₹@Model.CourseDetails.Fee.ToString("N2")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>